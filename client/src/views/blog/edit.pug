extends ../layouts/main.pug

block title
    title Blogs
block content
    div(class="container blog-page edit-page")
        .content-box
            .row
                .col-md-8
                    h1 Edit a Post

                    form(action="/blog/"+ post.slug +"?_method=PUT", method="POST")
                        input(type="hidden", name="_id", value=post._id)
                        div
                            label(for="title") Title
                            input(type="text", name="title", value=post.title)

                        div
                            label(for="category") Category
                            input(type="text", name="category" value=post.category)
                        div
                            label(for="description") Description
                            textarea(name="description")= post.description
                        div
                            button(type="submit") Update Post
                .col-md-4 
                        img(src="https://microhealth.com/assets/images/illustrations/personal-user-illustration-@2x.png")   

                    
